    <Content Remove="ClientAppOld\dist\**" />
    <Content Remove="ClientAppOld\platforms\**" />
    <Content Remove="ClientApp\dist\**" />
    <Content Remove="Data2\**" />
    <Content Remove="Pages\Account\**" />
